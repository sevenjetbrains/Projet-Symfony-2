{%  extends 'base.html.twig' %}
{% block title %}Modifications du profil utilisateur
{% endblock %}
{% block body %}

	<div class="container">
		<h1 class="my-5">Modifier du profil</h1>
		{{ form_start(form) }}
		<div class="row">
			<div class="col">
				<div class="alert alert-light">
					<h2 class="alert-heading">Inmformations générales</h2>
					<hr>
					{{form_row(form.firstName)}}
					{{form_row(form.LastName)}}
					{{form_row(form.email)}}
					{{form_row(form.picture)}}
				</div>

			</div>
			<div class="col">
				<div class="alert alert-light">
					<h2 class="alert-heading">Détails</h2>
					<hr>
					{{ form_row(form.introduction) }}
					{{ form_row(form.descritption) }}
					<hr>
					<p>Si vous avez terminé vos modifications,vous pouvez les sauvegarder</p>
					<button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Enregister les modifications
					</button>
				</div>
			</div>
		</div>
		
		{{ form_end(form) }}
	</div>

{% endblock %}
